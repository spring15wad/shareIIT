= form_for @replypost do |f|
  - if @replypost.errors.any?
    #error_explanation
      %h2= "#{pluralize(@replypost.errors.count, "error")} prohibited this replypost from being saved:"
      %ul
        - @replypost.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :replyuid
    = f.number_field :replyuid
  .actions
    = f.submit 'Save'
