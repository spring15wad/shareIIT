    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{name: 'viewport', content: 'width=device-width,initial-scale=1.0'}
    %title ShareIIT
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

- if user_signed_in?
  %ul
    .allreq
      %li
        .testings
          %big= link_to "Service Requests", request_path(request: "service")
      %li
        .testings
          %big= link_to "Book Requests", request_path(request: "book")
      %li
        .testings
          %big= link_to "Misc Requests", request_path(request: "misc")
-else
  /%h3 Three Recent Requests
  /%ul
  /  - @requests.take(3).each do |request|
  /    %li
  /      = link_to request.title, public_request_path(request)
